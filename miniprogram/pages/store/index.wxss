/* pages/store/index.wxss */
.tabs {
  display: flex;
  position:absolute;
  margin-left: -200rpx;
  margin-top: -25rpx;
  background-color: #f6f6f6;
}
.store-map {
  margin-top: 30rpx;
  width: 100%;
  height: 520rpx;
}

.collapse-area {
  margin-top: 10rpx;
  font-size: 26rpx;
}

.store-list {
  width: 100%;
  box-sizing: border-box;
  background-color: #f8f8f8;
  transition: all 0.5s;
}

.store-list .store-box {
  background-color: #ffffff;
  padding: 25rpx;
  margin: 14rpx 25rpx;
  display: flex;
  align-items: center;
}

.store-list .store-box .location-area {
  height: 100%;
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.store-list .store-box .location-area .distance {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 35rpx;
}

.store-list .store-box .location-area .action-area {
  width: 112rpx;
  display: flex;
  justify-content: space-around;
}

.store-list .store-box .location-area .action-area image {
  width: 40rpx;
  height: 40rpx;
}

.store-list .store-box .info-area {
  flex: 1;
  border-right: 1rpx solid #eeeeee;
}

.store-list .store-box .info-area .name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.store-list .store-box .info-area .info {
  font-size: 18rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.store-list .store-box .info-area .tag {
  display: inline-block;
  background-color:#d62c20;
  font-size: 18rpx;
  color: #fff;
  padding: 6rpx;
}

.store-list .empty {
  margin-top: 30rpx;
  font-size: 20rpx;
  color: #666;
  text-align: center;
}

.store-detail {
  box-sizing: border-box;
}

.store-detail .container {
  padding: 0 30rpx;
}

.store-detail .container .header-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 25rpx 0;
}

.store-detail .container .header-area .info {
  position: absolute;
  margin-left: -300rpx;
}

.store-detail .container .header-area .info .title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 26rpx;
  margin-bottom: 18rpx;
}

.store-detail .container .header-area .info .address {
  font-size: 26rpx;
  color: #666;
  line-height: 20rpx;
}

.store-detail .container .header-area .distance {
  font-size: 26rpx;
}
.store-detail .container .store-detail-map {
  width: 100%;
  height: 392rpx;
}
.store-detail .container .menu-btn {
  margin-top: 20rpx;
  width: 100%;
  height: 85rpx;
  background-color: #d2252c;
  color: white;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;     
  margin-bottom: 42rpx;
}